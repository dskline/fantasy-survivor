    "codegen": "doppler run -- graphql-codegen --require dotenv/config"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "graphql": "^16.5.0",
    "next": "^12.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@frontendlive/eslint-config": "^1.1.0",
    "@graphql-codegen/cli": "^2.8.1",
    "@graphql-codegen/near-operation-file-preset": "^2.3.1",
    "@graphql-codegen/typescript-operations": "^2.5.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "autoprefixer": "^10.4.7",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "jest": "^28.1.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.js"
    ],
    "extends": [
      "@frontendlive"
