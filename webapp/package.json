{
  "name": "@frontendlive/fantasy-survivor",
  "version": "1.0.0",
  "scripts": {
    "start": "doppler run -- next dev",
    "build": "doppler run -- next build",
    "lint": "next lint",
    "lint-fix": "prettier --write '{features,pages}/**/*' && next lint --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage && coveralls < coverage/lcov.info",
    "codegen": "doppler run -- graphql-codegen --require dotenv/config"
  },
  "dependencies": {
    "@apollo/client": "3.6.9",
    "graphql": "16.5.0",
    "next": "12.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@frontendlive/eslint-config": "1.1.2",
    "@graphql-codegen/cli": "2.9.0",
    "@graphql-codegen/near-operation-file-preset": "2.4.0",
    "@graphql-codegen/typescript-operations": "2.5.2",
    "@testing-library/react": "13.3.0",
    "@types/node": "18.0.6",
    "@types/react": "18.0.15",
    "autoprefixer": "10.4.7",
    "c8": "7.12.0",
    "coveralls": "3.1.1",
    "dotenv": "16.0.1",
    "eslint": "8.20.0",
    "jsdom": "20.0.0",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.6",
    "typescript": "4.7.4",
    "vite": "3.0.2",
    "vitest": "0.18.1"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.js"
    ],
    "extends": [
      "@frontendlive"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "polyfills": [
        "fetch"
      ]
    }
  }
}
